<div class="container row justify-content-center col-12">

<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">

    <div id="edit-form">
        <div class="dog-form">
          <h1>Edit your dog's details</h1>
          <div class="mt-3">
                <%= form_for(@dog) do |f| %>
                    <div class="form-group">
                      <%= f.label :name %>
                      <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :description %>
                      <%= f.text_field :description, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :address %>
                      <%= f.text_area :address, class: 'form-control' %>
                    </div>
                      <div class="form-group">
                      <%= f.label :price %>
                      <%= f.number_field :price, class: 'form-control' %>
                    </div>
                    <div class="mt-3">
                      <%= f.submit "Edit", class: 'btn-yours' %>
                      <%= link_to 'Cancel', '#', class: 'btn btn-light' %>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  
  <img class="avatar" alt="avatar" src="https://images.unsplash.com/photo-1516693452408-b54cfce17899?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" />

</div>