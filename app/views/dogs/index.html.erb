<div class="page-container">
<h1> Which of these lovely dogs will become your friend for a day? üîç </h1>

  <%= form_tag dogs_path, method: :get do %>
    <%= select_tag(:price, options_for_select(["below 10", "below 5", "free"], selected: params[:price]), :include_blank => "Price") %>
    <%= submit_tag "Filter!", class: "btn btn-flat" %>
  <% end %>

<div class="dogs-container">
  <% @dogs.each do |dog| %>
<div class="card-dog">

  <img src="https://images.pexels.com/photos/1564506/pexels-photo-1564506.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" />
   <div class="card-dog-infos">
  <%= link_to dog.name, dog_path(dog) %>
  <p> from <%= dog.address %></p>
  <p> Price: <%= dog.price %></p>
</div>
</div>
  <% end %>

</div>
</div>
