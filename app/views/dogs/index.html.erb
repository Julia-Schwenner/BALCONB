<div class="page-container">
<h1> Which of these lovely dogs will become your friend for a day? 🔍 </h1>

<div class="dogs-container">
  <% @dogs.each do |dog| %>
<div class="card-dog">

  <%= image_tag "dogs/#{rand(1..10)}.jpg" %>
   <div class="card-dog-infos">
  <%= link_to dog.name, dog_path(dog) %>
  <p>living in <%= dog.address %></p>
</div>
</div>
  <% end %>


<button class="btn btn-outline-secondary"><%= link_to "Add your Dog",  new_dog_path %></button>
</div>
</div>
